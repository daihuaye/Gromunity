<h1>Login</h1>
<%= form_for @user_session, :url => {:action => "create"} do |f| %>
	<div>
		<%= f.label :login %>
		<%= f.text_field :login %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
	</div>
	<div>
		<%= f.submit "login" %>
	</div>
<% end %>