<h1>Listing posts</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Item</th>
    <th>Price</th>
    <th>barter</th>
    <th>description</th>
	<th>user id</th>
	<th></th>
	<th></th>
	<th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.post_type %></td>
    <td><%= post.item %></td>
	<td><%= post.price %></td>
	<td><%= post.barter %></td>
	<td><%= post.description %></td>
	<td><%= post.user_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

