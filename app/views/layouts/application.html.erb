<!DOCTYPE html>
<html>
<head>
	<title>Gromunity - together we grow</title>
	<%= yield :head %> 
	<%= stylesheet_link_tag "scaffold", "master" %>
	<%= javascript_include_tag :defaults, "application", "easypaginate.min" %>
	
	<%= csrf_meta_tag %>
    <link rel="shortcut icon" href="/favicon.ico" />

		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-25707535-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
		
</head>
<body>
<div id="globalwrapper">
	<header>
    	<h1><%= link_to 'Gromunity', root_path %></h1>
    	<section id="account">
        	<%- if current_user %>
				<h1>Welcome, <%= link_to current_user.login, user_path(current_user.id) %>!</h1>
	            <div class="notifications">
	            	<a class="icon messages" href="/messages">Messages</a>
	                <a class="icon notifications" href="/my/notifications">Notifications</a>
	            </div>
	            <div class="me">
					<%= link_to "Account Settings", edit_user_path(current_user.id) %>
	                <%= link_to "Log Out", logout_path %>
	            </div>
			<%- else %>
				<%= link_to "Sign in", login_path %> | 
				<%= link_to "Create account", new_user_path %>
			<%- end %>
        </section>
    	<nav>
	        <ul>
	            <li>
	            	<a href="/">Feed</a>
	            </li>
	            <li>
	            	<a href="/users">Users</a>
	            </li>
	            <li>
	            	<a href="/communities">Communities</a>
	            </li>
	            <li>
	            	<a href="/events">Events</a>
	            </li>
	            <li>
	            	<a href="/about">About</a>
	            </li>
	        </ul>
    	</nav>
    </header>
	
<%= yield %>
<%= yield :scripts %>
<div id="footer-push"></div>
</div>

<footer>

    <p class="copyright">Copyright 2011 Gromunity</p>
    <p>Designed and Implemented by Aiden, <a href="http://alex.nisnevich.com/">Alex</a>, Alex, Jae, <a href="http://gplus.to/justjake">Jake</a> and <a href="http://dygames.site11.com/">Raymond</a></p>

</footer>

</body>
</html>
