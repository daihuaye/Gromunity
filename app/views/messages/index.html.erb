<%- if @message %>
<table>
  <tr>
    <th>From</th>
    <th>Title</th>
    <th></th>
  </tr>

<% @message.each do |message| %>
	<%#- @sender = User.find(message.recipient_id).login %>
  <tr>
    <td><%= link_to User.find(message.sender_id).login, message %></td>
    <td><%= link_to message.title, message %></td>
    <td><%= link_to 'Delete', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% else %>
	<br />
	<h2>No messages</h2>
<% end %>

